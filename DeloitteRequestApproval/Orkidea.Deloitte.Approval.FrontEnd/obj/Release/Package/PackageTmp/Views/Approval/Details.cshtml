@model Orkidea.Deloitte.Approval.Entities.ApprovalRequest
@{
    ViewBag.Title = "Detalle de la solicitud";
}

<div class="ork-Content">
    <h2>Solicitud de aprobación <strong>@Model.id</strong></h2>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.request, "Solicitud", new { @class = "control-label" })
                @Html.TextAreaFor(m => m.request, new { @class = "form-control required", title = "Contenido del requerimiento", rows = 7, style = "max-width:100%;" })
                @Html.ValidationMessageFor(m => m.request, "Requerido", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @*<a href="@Url.Action("Approve", new { id = ViewBag.cipherId })" class="btn btn-info" title="Aprobar"><i class="fa fa-thumbs-up "></i> Aprobar</a>*@
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#approveModal"><i class="fa fa-thumbs-up "></i> Aprobar</button>
                <span> | </span>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rejectModal"><i class="fa fa-thumbs-down "></i> Rechazar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="approveModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                <h4 class="modal-title">Aprobar Solicitud</h4>
            </div>
            @{ Html.RenderAction("Approve", "Approval", new { id = ViewBag.cipherId });}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="rejectModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                <h4 class="modal-title">Aprobar Solicitud</h4>
            </div>
            @{ Html.RenderAction("Reject", "Approval", new { id = ViewBag.cipherId });}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->